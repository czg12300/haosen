<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/messages_item_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="3dp"
            android:textSize="9sp"
            android:text="1分钟前" />

        <ImageView
            android:id="@+id/messages_item_im_shortcut"
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
           />

        <TextView
            android:id="@+id/messages_item_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/messages_item_im_shortcut"
            android:layout_toRightOf="@+id/messages_item_im_shortcut"
            android:paddingTop="3dp"
            android:text="标题"
            android:textColor="#000000"
            android:maxLines="1"
            android:layout_marginTop="11dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/messages_item_tv_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/messages_item_tv_title"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/messages_item_im_shortcut"
            android:maxLines="2"
            android:textSize="11dp"


            android:textColor="#666666" />
    </RelativeLayout>


</LinearLayout>