<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/frament_huoliBg"
        android:layout_width="143dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/detail_p4" />

    <ImageView
        android:id="@+id/frament_huoliNumImg"
        android:layout_width="64dp"
        android:layout_height="44dp"
        android:layout_alignLeft="@id/frament_huoliBg"
        android:layout_alignTop="@id/frament_huoliBg"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/huoli_number" />

</RelativeLayout>