<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/reset_psw_background"
              android:orientation="vertical">

    <com.heneng.heater.views.HeaderView
        android:id="@id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_header_height"
        app:headerTitle="操作成功"></com.heneng.heater.views.HeaderView>

    <ImageView
        android:id="@+id/repsw_result_im"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/result_yes"/>

    <TextView
        android:id="@+id/repsw_result_tv"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="恭喜！密码修改成功！"
        android:textColor="#ea6d28"
        android:layout_marginTop="20dp"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/repsw_result_tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#000000"/>


    <TextView
        android:id="@+id/repsw_result_tv_gohome"
        style="@style/Yellow_button"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"

        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:text="返回"/>


</LinearLayout>