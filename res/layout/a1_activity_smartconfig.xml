<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/smartconfig_ll_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_marginTop="100dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
            android:id="@+id/smartconfig_tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="300"
            android:textColor="#000000"
            android:textSize="40sp" />

        <ImageView
            android:layout_width="260dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/connect_tip" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/smartconfig_ll_center"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:lineSpacingExtra="3dp"
        android:lineSpacingMultiplier="1.0"
        android:text="@string/smartconfig_tips"
        android:textColor="#000000"
        android:textSize="18sp" />

    <com.heneng.heater.views.HeaderView
        android:id="@id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_header_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:headerLeftText="返回"
        app:headerRightText="停止"
        app:headerTitle="正在连接设备" />

</RelativeLayout>