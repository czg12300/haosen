<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/reset_psw_background"
              android:orientation="vertical">

    <com.heneng.heater.views.HeaderView
        android:id="@id/header"
        android:layout_width="match_parent"
        app:headerLeftText="返回"
        android:layout_height="@dimen/view_header_height"
        app:headerTitle="绑定手机"></com.heneng.heater.views.HeaderView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="手机号码："
            android:textSize="@dimen/reset_psw_textsize"/>

        <EditText
            android:id="@+id/bind_phone_et_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/reset_psw_background"
            android:hint="请输入你的手机号码"
            android:inputType="number"
            android:textSize="@dimen/reset_psw_textsize"/>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        android:background="#666666"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="短信验证码:"
            android:textSize="@dimen/reset_psw_textsize"/>

        <EditText
            android:id="@+id/bind_phone_et_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/reset_psw_background"
            android:hint="请确认验证码"
            android:inputType="number"
            android:textSize="@dimen/reset_psw_textsize"/>

        <TextView
            android:id="@+id/bind_phone_tv_get_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/yellow_text"
            android:textSize="@dimen/reset_psw_textsize"/>


    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#666666"/>

    <TextView
        android:id="@+id/bind_phone_tv_next"
        style="@style/Yellow_button"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:text="确定"/>


</LinearLayout>