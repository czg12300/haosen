<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f3f0"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/login_left_right_margin"
        android:layout_marginRight="@dimen/login_left_right_margin"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:layout_width="@dimen/login_logo_size"
            android:layout_height="@dimen/login_logo_size"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center_horizontal"
            android:gravity="bottom|center"
            android:src="@drawable/logo"/>


        <EditText
            android:id="@+id/login_username"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_et_height"
            android:background="@drawable/username2"
            android:ems="10"
            android:hint="@string/username"
            android:paddingLeft="@dimen/login_et_margin_left"
            android:singleLine="true"
            android:textColor="#555555"
            android:textSize="@dimen/login_hint_textsize"
            android:textColorHint="#cccccc">

            <requestFocus/>
        </EditText>

        <EditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_et_height"
            android:layout_marginTop="2dp"
            android:background="@drawable/pwd2"
            android:ems="10"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/login_et_margin_left"
            android:textColor="#555555"

            android:textSize="@dimen/login_hint_textsize"
            android:textColorHint="#cccccc"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/login_autoLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="记住账号密码"
                android:textColor="#FE840A"
                android:textSize="@dimen/login_hint_textsize"/>

            <TextView
                android:id="@+id/login_tv_forget_psw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="忘记密码?"
                android:textColor="#FE840A"
                android:textSize="@dimen/login_hint_textsize"/>

        </RelativeLayout>

        <Button
            android:id="@+id/login_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/selector_btnbg"
            android:gravity="center"
            android:text="登       录"
            android:textColor="#ffffff"
            android:textSize="@dimen/login_submit_textsize"/>

        <Button
            android:id="@+id/login_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/selector_register_btn"
            android:gravity="center"
            android:text="注册"
            android:textColor="#666666"
            android:textSize="@dimen/login_hint_textsize"/>

    </LinearLayout>

</LinearLayout>